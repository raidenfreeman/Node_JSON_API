mixin storeForm(store = {})
    form(action = `/add/${store._id ||''}` method="POST" class="card")
        label
            | Name
            input(type="text" name="name" value=store.name)
        label
            | Description
            textarea(name="description", cols="30", rows="10")= store.description
            //- inp ut(type="text")
        - const choices = ['wifi', 'open late', 'cozy', 'trendy'];
        - const tags = store.tags || []
        ul.tags
            each choice in choices
                .tag.tag__choice
                    input(type="checkbox" value=choice id=choice name="tags" checked=(tags.includes(choice)))
                    label(for=choice) #{choice}
        input(type="submit" value="Save" class="button")